{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": false,
    // "isolatedModules": true,

    // "bun-types" is the important part
    "types": ["bun-types"],

    "rootDir": ".",
    "paths": {
      "@is": ["./lib/is"],
      "@test": ["./lib/test"]
    }
  }
}
